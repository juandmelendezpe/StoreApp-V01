<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

	<servlet>
	    <servlet-name>IndexServlet</servlet-name>
	    <servlet-class>edu.alonso.daw.proyectoProgramacion.IndexServlet</servlet-class>
	</servlet>
	
	<servlet>
	    <servlet-name>ProductoServlet</servlet-name>
	    <servlet-class>edu.alonso.daw.proyectoProgramacion.ProductoServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>ProductoServlet</servlet-name>
	    <url-pattern>/producto/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>VentaServlet</servlet-name>
	    <servlet-class>edu.alonso.daw.proyectoProgramacion.VentaServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>VentaServlet</servlet-name>
	    <url-pattern>/venta/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>ValoracionServlet</servlet-name>
	    <servlet-class>edu.alonso.daw.proyectoProgramacion.ValoracionServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>ValoracionServlet</servlet-name>
	    <url-pattern>/valoracion/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>IndexServlet</servlet-name>
	    <url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>*.css</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>*.js</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>*.jpg</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>*.jpeg</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>default</servlet-name>
	    <url-pattern>*.png</url-pattern>
	</servlet-mapping>
</web-app>
